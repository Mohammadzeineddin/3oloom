<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>طلب استأجار</title>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/talab-ajar.css">
</head>
<body>
  
    <div class="container">
      <form  onsubmit="return submitForm(this);">
          
        <label for="customername">الاسم الثلاثي</label>
        <input type="text" id="customername" name="customer_name">	
        
        <label for="customercity">مكان الأجار</label>
        <input type="text" id="customercity" name="customer_city">	

        <label for="mail">البريد الالكتروني</label>
        <input type="email" id="mail" name="contact_email">
        
        <label for="telephone">رقم الهاتف</label>
        <input type="tel" id="telephone" name="contact_phone">

        <div class="price-input"> 
          <div class="price-field"> 
              <span>السعر</span> 
              <input type="text" 
                    placeholder="100-85$"
                    id="customerprice" name="customer_price">
          </div>
        </div> 
      <div class="container">			
        <button class="btn" type="submit">عرض الطلب</button>
      </div>
    </div>
       
        
      </form>
      
        <script>
          function submitForm(form){
            window.location.assign("home-me7.ejs")
            alert("لقد تم عرض طلبك")
          }
          const form=document.querySelector("form");
          const firstName=document.getElementById("customername")
          const Email=document.getElementById("mail")
          const place=document.getElementById("customercity")
          const phone = document.getElementById("telephone")
          const price = document.getElementById("customerprice")
          form.addEventListener("submit",(e)=>{
            e.preventDefault();
            const firstNameValue=firstName.value
            const emailValue=Email.value
            const placevalue=place.value
            const phoneValue=phone.value
            const priceValue=price.value
            localStorage.setItem("name",firstNameValue)
            localStorage.setItem("email",emailValue)
            localStorage.setItem("place",placevalue)
            localStorage.setItem("phone",phoneValue)
            localStorage.setItem("price",priceValue)
            window.location.href="3orood-ajar.ejs"
            const fd = new FormData(form);
            const urlEncoded= new URLSearchParams(fd).toString();
            fetch("http://threeoloom.onrender.com/home-me7.ejs",{
              method:"POST",
              body:urlEncoded,
              headers:{
                "content-type":"application/x-www-form-urlencoded",
                
              }
            })
          })
        </script>
</body>
</html>